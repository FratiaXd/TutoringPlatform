@page "/adminpages/dashboard"
@attribute [Authorize(Roles = "Admin")]
@attribute [StreamRendering]
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Student Dashboard</PageTitle>
<h3>Student Dashboard</h3>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.RoleName</td>
                <td><button class="btn btn-primary" @onclick="@(() => OpenStudentDetails(user.Id))">Details</button></td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<TutoringPlatformUser> users = new List<TutoringPlatformUser>();

    [Inject]
    private UserManager<TutoringPlatformUser> UserManager { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var userList = await UserManager.Users.ToListAsync();
        users = userList;
    }

    void OpenStudentDetails(string id)
    {
        NavigationManager.NavigateTo($"/shared/studentdetails/{id}");
    }
}
